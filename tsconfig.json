{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ES6", "ES2017"],
    "module": "CommonJS" ,
    "moduleResolution": "Node" ,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true ,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
